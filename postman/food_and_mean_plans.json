{
  "info": {
    "name": "Nutrition Module",
    "_postman_id": "12345678-aaaa-bbbb-cccc-1234567890ab",
    "description": "All endpoints for Meal Plans, Assignments, and Meal Logs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Meal Plans",
      "item": [
        {
          "name": "List Meal Plans",
          "request": { "method": "GET", "url": "{{base_url}}/nutrition/meal-plans" }
        },
        {
          "name": "Meal Plans Stats",
          "request": { "method": "GET", "url": "{{base_url}}/nutrition/meal-plans/stats" }
        },
        {
          "name": "Create Meal Plan",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/nutrition/meal-plans",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Weight Loss Meal Plan\",\n  \"desc\": \"High protein meal plan for weight loss\",\n  \"days\": [\n    {\n      \"day\": \"monday\",\n      \"name\": \"Monday - High Protein Day\",\n      \"foods\": [\n        {\n          \"name\": \"Chicken Breast\",\n          \"category\": \"Protein\",\n          \"calories\": 165,\n          \"protein\": 31,\n          \"carbs\": 0,\n          \"fat\": 3.6,\n          \"unit\": \"g\",\n          \"quantity\": 150,\n          \"mealType\": \"LUNCH\"\n        }\n      ]\n    },\n    {\n      \"day\": \"tuesday\",\n      \"name\": \"Tuesday - Balanced Day\",\n      \"foods\": [\n        {\n          \"name\": \"Rice\",\n          \"category\": \"Carb\",\n          \"calories\": 130,\n          \"protein\": 2.7,\n          \"carbs\": 28,\n          \"fat\": 0.3,\n          \"unit\": \"g\",\n          \"quantity\": 200,\n          \"mealType\": \"DINNER\"\n        }\n      ]\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get Meal Plan By ID",
          "request": { "method": "GET", "url": "{{base_url}}/nutrition/meal-plans/:id" }
        },
        {
          "name": "Update Meal Plan",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/nutrition/meal-plans/:id",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Plan\",\n  \"desc\": \"Updated description\",\n  \"isActive\": true,\n  \"days\": [\n    {\n      \"day\": \"wednesday\",\n      \"name\": \"Protein & Veg Day\",\n      \"foods\": [\n        {\n          \"name\": \"Salmon\",\n          \"calories\": 208,\n          \"protein\": 20,\n          \"carbs\": 0,\n          \"fat\": 13,\n          \"unit\": \"g\",\n          \"quantity\": 120,\n          \"mealType\": \"DINNER\"\n        }\n      ]\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Delete Meal Plan",
          "request": { "method": "DELETE", "url": "{{base_url}}/nutrition/meal-plans/:id" }
        },
        {
          "name": "Assign Meal Plan",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/nutrition/meal-plans/:id/assign",
            "body": { "mode": "raw", "raw": "{ \"userId\": \"user-uuid\" }" }
          }
        },
        {
          "name": "Bulk Assign Meal Plan",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/nutrition/meal-plans/:id/assign-bulk",
            "body": { "mode": "raw", "raw": "{ \"athleteIds\": [\"user1-uuid\", \"user2-uuid\"] }" }
          }
        },
        {
          "name": "List Assignees",
          "request": { "method": "GET", "url": "{{base_url}}/nutrition/meal-plans/:id/assignees" }
        },
        {
          "name": "Get My Active Plan",
          "request": { "method": "GET", "url": "{{base_url}}/nutrition/meal-plans/my/active" }
        }
      ]
    },
    {
      "name": "Meal Logs",
      "item": [
        {
          "name": "Upsert Meal Log",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/nutrition/meal-logs",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2025-10-08\",\n  \"day\": \"wednesday\",\n  \"mealType\": \"LUNCH\",\n  \"itemName\": \"Chicken Breast\",\n  \"quantity\": 150,\n  \"taken\": true,\n  \"notes\": \"Felt heavy\",\n  \"suggestedAlternative\": \"Tuna can\",\n  \"planFoodId\": \"food-uuid\",\n  \"assignmentId\": \"assignment-uuid\"\n}"
            }
          }
        },
        {
          "name": "Meal Log Summary",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/nutrition/meal-logs/summary?date=2025-10-08"
          }
        },
        {
          "name": "List Meal Logs",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/nutrition/meal-logs?from=2025-10-01&to=2025-10-08"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8081/api/v1" }
  ]
}
